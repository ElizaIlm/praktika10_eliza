<Window x:Class="pr10elik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr10elik"
        mc:Ignorable="d"
           Title="Паспортный стол" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <ListView x:Name="lv_passport" Margin="10,10,10,40">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Имя" Width="100" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Фамилия" Width="100" DisplayMemberBinding="{Binding Firstname}"/>
                    <GridViewColumn Header="Отчество" Width="100" DisplayMemberBinding="{Binding Lastname}"/>
                    <GridViewColumn Header="Паспорт" Width="100" DisplayMemberBinding="{Binding Issued}"/>
                    <GridViewColumn Header="Дата выдачи" Width="100" DisplayMemberBinding="{Binding DateOfIssued}"/>
                    <GridViewColumn Header="Код подразделения" Width="100" DisplayMemberBinding="{Binding DepatmentCode}"/>
                    <GridViewColumn Header="Серия и номер" Width="100" DisplayMemberBinding="{Binding SerialAndNumber}"/>
                    <GridViewColumn Header="Дата рождения" Width="100" DisplayMemberBinding="{Binding DateOfBirth}"/>
                    <GridViewColumn Header="Место рождения" Width="100" DisplayMemberBinding="{Binding PlaceOfBirth}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Click="Update" Content="Изменить" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,115,10" Width="100" Height="25"/>
        <Button Click="Add" Content="Добавить" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,220,10" Width="100" Height="25"/>
        <Button Click="Delete" Content="Удалить" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Width="100" Height="25"/>

    </Grid>
</Window>
