        <TextBox x:Name="PlaceOfBirth" Height="23" Margin="10,468, 10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Button x:Name="BthAdd" Click="AddPassport" Content="Дoбавить" HorizontalAlignment="Right" Margin="0,0,10,10" Width="75" VerticalAlignment="Bottom" Height="25"/>
